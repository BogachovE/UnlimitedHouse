<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="@dimen/house_width"
        android:layout_height="@dimen/house_height"
        android:id="@+id/house"
        android:background="@drawable/house"
        android:contentDescription="@string/deck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sign_btn_margin_top"

        />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phonetxt"
        android:inputType="phone"
        android:text="  PHONE NUMBER"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/house"
        android:layout_marginTop="@dimen/sign_btn_margin_top"
        android:drawableLeft="@drawable/phone_number"
        android:textColor="#BBBCBE"
        android:textColorHint="#BBBCBE"
        android:backgroundTint="#BBBCBE"



        />


    <ImageButton
        android:background="@drawable/nextbtn"
        android:layout_width="@dimen/nextbtn"
        android:layout_height="@dimen/nextbtn"
        android:id="@+id/nextbtn"
        android:contentDescription=""
        android:layout_below="@id/phonetxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sign_btn_margin_top"/>


</RelativeLayout>