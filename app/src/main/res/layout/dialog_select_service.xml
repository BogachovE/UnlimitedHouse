<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/rename_edit"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rename_btn"
        android:layout_weight="1"
        android:text="Rename service"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/change_pic_edit"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/change_pic_btn"
        android:layout_weight="1"
        android:text="Change service picture"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dell_btn"
        android:layout_weight="1"
        android:text="Delete service"
        />

</LinearLayout>