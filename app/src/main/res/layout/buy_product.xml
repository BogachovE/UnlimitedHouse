<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopsCateg.BuyProduct"
    android:background="#F3F2F2"
    android:clickable="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/product_exemple"
        android:id="@+id/product_image"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/product_image"
        android:id="@+id/service_desc_title"
        android:layout_marginTop="25dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Describtion"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="21sp"
            android:id="@+id/service_desc_title_title"
            android:layout_marginLeft="10dp"/>


        <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/price_img"
            android:layout_alignParentRight="true"
            android:id="@+id/price_img"
            android:layout_marginRight="10dp"
       />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price_txt"
            android:text="20 SAR"
            android:layout_alignLeft="@+id/price_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:textStyle="bold"
            android:textColor="#000000" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service_desc_title"
        android:text="This servise blablabalThis servise blablabalThis servise blablabalThis servise This servise blablabalThis servise blablabaThis servise blablaballThis servise This servise blablabal"
        android:id="@+id/service_desc"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
         />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/line"
        android:layout_below="@id/service_desc"
        android:src="@drawable/line" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/person_numb"
        android:layout_below="@id/line"
        android:layout_marginTop="20dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignLeft="@+id/visting_req">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Served Person"
            android:id="@+id/person_numb_txt"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/less"
            android:id="@+id/person_numb_btn_less"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/person_numb_count"
            android:layout_marginRight="2dp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/person_numb_count"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_toLeftOf="@+id/btn_more"
            android:layout_marginRight="3dp"
           />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/more"
            android:id="@+id/btn_more"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"

         />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/visting_req"
        android:layout_below="@id/person_numb"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required House Visting"
            android:layout_gravity="center_vertical"
            android:id="@+id/visting_req_txt"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_height="20dp"
            android:layout_width="40dp"
            android:id="@+id/visting_req_btn"
            android:background="@drawable/yes"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/visting_req_btn2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/visting_req_btn_yes"
            android:text="Yes"
            android:layout_alignLeft="@+id/visting_req_btn"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            />
        <ImageView
            android:layout_height="20dp"
            android:layout_width="40dp"
            android:id="@+id/visting_req_btn2"
            android:background="@drawable/yes"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/visting_req_btn_no"
            android:text="No"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:textStyle="bold"

            android:layout_alignLeft="@+id/visting_req_btn2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/custom_order"
    android:layout_marginTop="10dp"
    android:layout_above="@+id/add_to_basket"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/custom_order_back"
        android:background="@android:color/black"
        android:clickable="true"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to customize order"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/cust_order" />

</FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:id="@+id/add_to_basket"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_to_basket_txt"
        android:text="Add To Basket"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true" />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/basket"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/add_to_basket_txt"
        android:layout_marginLeft="20dp" />

    </RelativeLayout>


</RelativeLayout>
