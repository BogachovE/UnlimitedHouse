<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <ImageView
        android:layout_width="@dimen/house_width"
        android:layout_height="@dimen/house_height"
        android:id="@+id/housee"
        android:background="@drawable/house"
        android:contentDescription="@string/deck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sign_btn_margin_top"

        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loc_editloc"
        android:inputType="phone"
        android:text=" CLICK FOR LOCATION"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/housee"
        android:layout_marginTop="@dimen/loc_editloc_margin_top"
        android:drawableLeft="@drawable/locationn"
        android:textColor="#BBBCBE"
        android:textColorHint="#BBBCBE"
        android:backgroundTint="#BBBCBE"
        android:focusable="false"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loc_house"
        android:text="  ENTER HOUSE NUMBER"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/loc_editloc"
        android:layout_marginTop="@dimen/loc_edithousenum_margin_top"
        android:drawableLeft="@drawable/house_iconn"
        android:textColor="#BBBCBE"
        android:textColorHint="#BBBCBE"
        android:backgroundTint="#BBBCBE"
        android:inputType="none"



        />

    <Button
        android:layout_width="@dimen/sign_btn_width"
        android:layout_height="@dimen/sign_btn_height"
        android:background="@drawable/sigin_up"
        android:layout_below="@id/loc_house"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/loc_btn_margin_top"
        android:id="@+id/nextbtn"/>


</RelativeLayout>