<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.e.bogachov.unlmitedhouse.ContactUs"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_profeile"
        android:text="CONTACT US"
        android:layout_marginTop="15dp"
        android:textColor="#00aeef"
        android:textSize="@dimen/profile_text_size"
        android:layout_marginLeft="@dimen/profile_titel_margin_left"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/lineh"
        android:layout_below="@id/profile_profeile"
        android:layout_marginTop="5dp"
        android:id="@+id/contact_us_line"
        android:layout_marginRight="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_us_layout"
        android:layout_below="@id/contact_us_line"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact_us_text"
            android:text="We are so glad because you will give us precious time of yours, just feel free to say what you would like too, complaint, feedback, ideas, anything you want to say we will hear it from our heart!"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#000"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/mline"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:id="@+id/contact_us_name_layout"

            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOURE NAME"
                android:id="@+id/contact_us_name_text"
                android:textSize="@dimen/profile_text_size"
                android:layout_marginRight="120dp"
                android:textColor="#00aeef"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      NAME"
                android:layout_marginLeft="15dp"
                android:id="@+id/contact_us_name_edit"
                android:textSize="16sp"
                android:textColor="#BBBCBE"
                android:textColorHint="#BBBCBE"
                />
        </LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/savee"
            android:text="xxxxxx"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
             />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/sendd" />


    </LinearLayout>



</RelativeLayout>
